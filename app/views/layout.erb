<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" hred="<%=url('./public/stylesheet.css')%>">
    <title>Chitter</title>
  </head>
  <body>
    <% if  flash[:notice]%>
      <%= flash[:notice]%>
    <%end%>

    <% if  flash[:errors]%>
      <ul>
        <% flash[:errors].each do |error| %>
          <li><%=error%></li>
        <% end %>
      </ul>
    <%end%>
    
    <% if current_user %>
    Welcome <%= current_user.name %>
      <form action='/session' method=post>
        <input type='hidden' name='_method' value='delete'>
        <button type='submit'>Sign out</button>
      </form>

      <div id='add'>
        <form action='/feed/new'>
          <button type='submit'>New Peep</button>
        </form>
      </div>
    
    <%else%>

      <div id='signin'>
        <form action='/session/new'>
          <button type='submit'>Login</button>
        </form>
      </div>

      <div id='signup'>
        <form action='/user'>
          <button type='submit'>Register</button>
        </form>
      </div>

    <%end%>
    <%= yield %>
  </body>
</html>